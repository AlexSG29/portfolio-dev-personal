---
// Import main component
import CardProject from "../components/Card-Project.astro";
// Imports Badges
import BadgeCode from "../components/badges/Badge-Code.astro";
import BadgePreview from "../components/badges/Badge-Preview.astro";
import BadgeTemplate from "../components/badges/Badge-Template.astro";
// Imports Icons
import DjangoIcon from "../components/icons/Django-Icon.astro";
import JsIcon from "../components/icons/Js-Icon.astro";
// Imports Images
import Project1_Img from "../images/project_1_maintenance_fms.webp";
---

<!-- Projects -->
<section class="my-10">
  <h1 class="text-3xl font-bold text-gray-900 mb-10">Proyectos</h1>
  <!-- Grid container for projects -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    <!-- Proyect 1 -->
    <CardProject
      title="Project 1"
      body={`Aquí va la descripción del proyecto. 
          Puedes escribir en varias líneas usando el 
          operador de interpolación de cadenas (backticks) 
          en JavaScript. Esto permite una mayor legibilidad 
          y organización del texto.
          `}
      img="/public/imagen.png"
      href_code="https://github.com"
      href_preview="https://lapalabradeldia.com"
    >
      <BadgePreview slot="preview" />
      <BadgeCode slot="code" />
      <slot slot="technologies">
        <BadgeTemplate className="bg-green-100 text-green-900">
          <DjangoIcon /> Django
        </BadgeTemplate>
        <BadgeTemplate className="bg-yellow-100 text-yellow-700">
          <JsIcon /> Java Script
        </BadgeTemplate>
      </slot>
    </CardProject>

