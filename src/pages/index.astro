---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import CardProject from '../components/Card-Project.astro';
---

<Layout title="Alex Sanchez">
	<Header/>
	<main class="flex flex-col">
		<!-- Top -->
		<section class="flex flex-row gap-8 h-96">
			<!-- Col 1 -->
			<div class="flex basis-2/3 flex-col justify-center items-start">
				<button class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 overflow-hidden text-xs font-medium text-gray-900 rounded-2xl group bg-gradient-to-br from-teal-300 to-lime-300 group-hover:from-teal-300 group-hover:to-lime-300 focus:ring-4 focus:outline-none focus:ring-lime-200">
					<span class="px-2 py-1 bg-white rounded-2xl overflow-hidden hover:bg-inherit">
					Disponible para trabajar
					</span>
				</button>
				<h1 class="text-gray-900 text-6xl font-bold mb-8">Alex Sánchez</h1>
				<p class="text-lg font-medium leading-6">Ingeniero enfocado en el 
					<span class="text-purple-800 font-bold">desarrollo web 	full-stack</span> 
					con experiencia en análisis de datos.
				</p>
			</div>
			<!-- Col  -->
			<div class="flex basis-1/3 justify-center items-center">
				<img class="max-w-full max-h-full rounded-full" src="/images/ReadyPlayerMe-Avatar (2).png" alt="avatar-profile-picture"/>
			</div>
		</section>
		<!-- Projects -->
		<section class="my-10">
			<h1 class="text-3xl font-bold text-gray-900 mb-10">Proyectos</h1>
			<!-- Cards -->
			<div class="
				grid lg:grid-cols-3 md:grid-cols-2 sm:grid-cols-1 gap-4
				place-items-center
				">
				<CardProject 
				title='Project 1'
				body='Aqui iria la descripcion del proyecto'
				href='#'
				img="https://www.pap.pl/sites/default/files/styles/main_image/public/202306/pap_20221218_2FS.jpg?h=14531cb3&itok=1LEK6_AJ"
				/>
				<CardProject 
				title='Project 2'
				body='Aqui iria la descripcion del proyecto'
				href='#'
				img="https://www.pap.pl/sites/default/files/styles/main_image/public/202306/pap_20221218_2FS.jpg?h=14531cb3&itok=1LEK6_AJ"
			/>
			<CardProject 
				title='Project 3'
				body='Aqui iria la descripcion del proyecto'
				href='#'
				img="https://www.pap.pl/sites/default/files/styles/main_image/public/202306/pap_20221218_2FS.jpg?h=14531cb3&itok=1LEK6_AJ"
			/>
			</div>
		</section>
	</main>

</Layout>

