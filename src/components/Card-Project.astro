---
import BadgeCode from "./Badge-Code.astro";
import BadgePreview from "./Badge-Preview.astro";

interface Props {
	title: string;
	body: string;
	img: string;
	href_code: string;
	href_preview: string;
}

const { title, body, img, href_code, href_preview } = Astro.props;
---

<article
	class="group relative block w-full h-64 sm:h-80 lg:h-96 rounded-lg shadow-lg overflow-hidden cursor-pointer"
>
	<!-- Imagen de fondo -->
	<img class="object-cover w-full h-full" src={img} alt="Imagen de fondo" />

	<!-- Contenido visible de la card -->
	<div
		class="absolute inset-x-0 top-0 p-6 bg-gray-800 bg-opacity-50 rounded-t-lg transition-opacity group-hover:opacity-0 group-hover:visible"
	>
		<!-- Título de la card -->
		<h2 class="text-2xl font-bold text-white">{title}</h2>
	</div>

	<!-- Contenido que aparece al hacer hover -->
	<div
		class="absolute inset-0 p-6 opacity-0 transition-opacity group-hover:opacity-100"
	>
		<!-- Contenido que aparece al hacer hover -->
		<div
			class="absolute inset-0 p-6 opacity-0 transition-opacity group-hover:opacity-100"
		>
			<!-- Fondo semitransparente para resaltar el texto -->
			<div class="bg-gray-100 bg-opacity-75 rounded-lg p-4 relative">
				<a href={href_preview} class="inline-block">
					<BadgePreview />
				</a>
				<a href={href_code} class="inline-block">
					<BadgeCode />
				</a>
				<!-- Título del contenido al hacer hover -->
				<h3 class="text-2xl font-bold text-gray-800">{title}</h3>

				<!-- Cuerpo del contenido al hacer hover -->
				<p class="mt-2 text-base font-normal text-gray-700">
					{body}
				</p>

				<!-- Enlace "Read more" del contenido al hacer hover -->
				<p class="mt-4 text-sm font-bold text-gray-800">Read more</p>
			</div>
		</div>
	</div>
</article>
