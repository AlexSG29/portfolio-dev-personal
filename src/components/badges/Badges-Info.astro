---
interface Props {
    href: string;
}
const { href } = Astro.props;
---

<a
    class="
        flex
        justify-center
        items-center
        gap-x-2
        py-1
        px-4
        max-w-fit
        rounded-full
        border
        border-gray-300
        hover:border-purple-400
        bg-gray-100
        hover:bg-purple-100
        font-base
        hover:font-medium
        text-sm
        text-gray-800
        hover:text-purple-800
        "
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    role="link"
>
    <slot />
</a>
