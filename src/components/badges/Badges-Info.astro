---
interface Props {
    href: string;
}
const { href } = Astro.props;
---

<a
    class="
        font-mono
        flex
        justify-center
        items-center
        gap-x-2
        py-1
        px-4
        max-w-fit
        rounded-full
        border
        border-gray-300
        dark:border-gray-700
        hover:border-purple-400
        dark:hover:border-yellow-500
        bg-gray-100
        dark:bg-gray-800
        hover:bg-purple-100
        dark:hover:bg-yellow-600
        font-base
        hover:font-medium
        text-sm
        text-gray-800
        dark:text-gray-200
        hover:text-purple-800
        dark:hover:text-purple-200
        "
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    role="link"
>
    <slot />
</a>

