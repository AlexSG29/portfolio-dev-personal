---
// Import main component
import CardProject from "@components/Card-Project.astro";
// Imports Badges
import BadgeCode from "@components/badges/Badge-Code.astro";
import BadgePreview from "@components/badges/Badge-Preview.astro";
import BadgeTemplate from "@components/badges/Badge-Template.astro";
// Imports Icons
import JsIcon from "@components/icons/Js-Icon.astro";
import HTMLIcon from "@components/icons/HTML-Icon.astro";
import CSSIcon from "@components/icons/CSS-Icon.astro";
//Import Images
import ProjectsImage from "@images/FrontMentor.png";
---

<CardProject
  title="Frontend Mentor Challenges"
  body={`
  Aqui podrÃ¡s encontrar mi perfil de Frontend Mentor con todos mis challenges resueltos y mis participaciones. 
  `}
  img={ProjectsImage}
  href_code="https://github.com/AlexSG29/FrontMentor_Challenges_3"
  href_preview="https://www.frontendmentor.io/profile/AlexSG29"
  
>
  <BadgePreview slot="preview" />
  <BadgeCode slot="code" />
  <slot slot="technologies">
    <BadgeTemplate className="bg-orange-100 text-orange-900">
      <HTMLIcon /> HTML5
    </BadgeTemplate>
    <BadgeTemplate className="bg-yellow-100 text-yellow-700">
      <JsIcon /> JavaScript
    </BadgeTemplate>
    <BadgeTemplate className="bg-indigo-100 text-indigo-900">
      <CSSIcon /> CSS3
    </BadgeTemplate>
  </slot>
</CardProject>
