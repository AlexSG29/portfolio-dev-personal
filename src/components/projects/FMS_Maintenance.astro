---
// Import main component
import CardProject from "@components/Card-Project.astro";
// Imports Badges
import BadgeCode from "@components/badges/Badge-Code.astro";
import BadgePreview from "@components/badges/Badge-Preview.astro";
import BadgeTemplate from "@components/badges/Badge-Template.astro";
// Imports Icons
import DjangoIcon from "@components/icons/Django-Icon.astro";
import JsIcon from "@components/icons/Js-Icon.astro";
import BootsTrapIcon from "@components/icons/BootsTrap-Icon.astro";
//Import Images
import ProjectsImage from "@images/fms_maintenance_project.png";
---

<CardProject
  title="Sistema de Gestión de Flotas"
  body={`
  Sistema web de gestión de flotas 🚛 
  para mantenimiento, que organiza y gestiona mantenimientos 🛠️,
  repuestos 🧩, proveedores 📞, y vehículos 🚗. Ofrece 
  funcionalidades como cronograma de mantenimiento 📅, 
  informes en PDF 📝, y un dashboard.
  `}
  img={ProjectsImage}
  href_code="https://github.com/AlexSG29/Envia_FMS"
  href_preview="https://alexsg29.pythonanywhere.com"
>
  <BadgePreview slot="preview" />
  <BadgeCode slot="code" />
  <slot slot="technologies">
    <BadgeTemplate className="bg-green-100 text-green-900">
      <DjangoIcon /> Django
    </BadgeTemplate>
    <BadgeTemplate className="bg-yellow-100 text-yellow-700">
      <JsIcon /> JavaScript
    </BadgeTemplate>
    <BadgeTemplate className="bg-violet-100 text-violet-900">
      <BootsTrapIcon /> Bootstrap
    </BadgeTemplate>
  </slot>
</CardProject>
