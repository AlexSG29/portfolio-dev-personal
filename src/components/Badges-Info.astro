---
interface Props {
    href: string;
}
const { href } = Astro.props;
---

<a
    class="rounded-full border border-gray-300 bg-gray-100 flex justify-center items-center gap-x-2 py-1 px-4 font-base text-sm text-gray-800 max-w-fit"
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    role="link"
>
    <slot />
</a>
